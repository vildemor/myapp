<h1>Listing events</h1>

<%= link_to 'New event', new_event_path %>
<br>
<%= link_to 'Show all events', events_path %>


<br>
<h2> Search Events </h2>
<%= form_tag(events_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search" %>
<%= submit_tag "Enter" %>
<% end %>
<br>
<table>

<% if @events.present? %>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Location</th>
    <th>Category</th>
    <th>Date and time</th>
    <th>Available tickets</th>
    <th colspan="3"></th>
  </tr>
      <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.text %></td>
            <td><%= event.location%></td>
            <td><%= event.category%></td>
            <td>On <%= event.start_date.to_date%> at <%= event.start_time.strftime("%I:%M%p")%></td>
            <td><%= event.available_tickets%></td>
            <td><%= link_to 'Show', event_path(event) %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Delete', event_path(event),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
          </tr>
          
      <%end%>
    </table>
<% else %>
  <p>There are no events containing the term(s) '<%= params[:search] %>'.</p>
<% end %>