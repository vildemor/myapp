<%= @user.name %>, <%= @user.email %>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      </section>

    <section id="attending">
      <h4>
        Events you are attending
      </h4>
      <br>
      <table>
        <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Category</th>
          <th>Location</th>
          <th>More information</th>
        </tr>
        </thead>
        <tbody>
        <% attending_events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.start_date.to_date %></td>
          <td><%= event.category %></td>
          <td><%= event.location %></td>
          <td><%= link_to 'Event page', event_path(event) %></td>
        </tr>
        <% end %>
        </tbody>
      </table><br>
    </section>

<section id="hosting">
      <h4>
        Events you are hosting
      </h4>
  <br>
      <table>
        <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Category</th>
          <th>Location</th>
          <th>More information</th>
        </tr>
        </thead>
        <tbody>
        <% hosting_events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.start_date.to_date %></td>
              <td><%= event.category %></td>
              <td><%= event.location %></td>
              <td><%= link_to 'Event page', event_path(event) %></td>
        <% end %>
        </tbody>
      </table><br>
    </section>
  </aside>
</div>